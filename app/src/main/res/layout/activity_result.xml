<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_dark">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="60dp"
        android:layout_height="57dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="41dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/go_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your typing speed"
        android:textColor="#C5C5C5"
        android:textSize="26sp"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginTop="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/wpmValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@android:color/white"
        android:textSize="84sp"
        android:fontFamily="@font/roboto_semi_bold"
        android:layout_marginStart="85dp"
        android:layout_marginTop="185dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gradientImage"
        android:layout_width="97dp"
        android:layout_height="34dp"
        android:src="@drawable/wpm"
        android:layout_marginStart="7dp"
        android:layout_marginTop="57dp"
        app:layout_constraintStart_toEndOf="@id/wpmValue"
        app:layout_constraintTop_toTopOf="@id/wpmValue" />



</androidx.constraintlayout.widget.ConstraintLayout>