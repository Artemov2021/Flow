<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="60dp"
        android:layout_height="57dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="41dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/go_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Your typing speed"
        android:textColor="#C5C5C5"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />







    <TextView
        android:id="@+id/wpmValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:fontFamily="@font/roboto_semi_bold"
        android:text="200"
        android:textColor="@android:color/white"
        android:textSize="84sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gradientImage"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <ImageView
        android:id="@+id/gradientImage"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="57dp"
        android:adjustViewBounds="true"
        android:maxWidth="97dp"
        android:scaleType="fitCenter"
        android:src="@drawable/wpm"
        app:layout_constraintTop_toTopOf="@id/wpmValue"
        app:layout_constraintStart_toEndOf="@id/wpmValue"
        app:layout_constraintEnd_toEndOf="parent" />








    <TextView
        android:id="@+id/record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/roboto_semi_bold"
        android:text="Record:"
        android:textColor="#C5C5C5"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wpmValue" />

    <FrameLayout
        android:id="@+id/resultDashboard"
        android:layout_width="0dp"
        android:layout_height="162dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="126dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/result_background" />

        <TextView
            android:id="@+id/totalTyped"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:paddingStart="30dp"
            android:paddingTop="20dp"
            android:text="Total typed words: 0"
            android:textColor="#C5C5C5"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:paddingStart="30dp"
            android:paddingTop="75dp"
            android:text="Correct words:"
            android:textColor="#686868"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/correctPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:paddingStart="30dp"
            android:paddingTop="108dp"
            android:text="0%"
            android:textColor="#C5C5C5"
            android:textSize="24sp" />


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>